@model decimal

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <header>
        <h1 class="display-4 text-center">Welcome</h1>
        <p class="text-center">Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </header>

    <main>
        @if (User.Identity.IsAuthenticated)
        {
            <h2 class="text-center">My Wallet</h2>
            <table class="table table-bordered table-striped">
                <tr>
                    <th>Balance</th>
                    <td>@Model</td>
                </tr>
            </table>
            <div class="text-center">
                <a href="@Url.Action("Deposit", "Home")" class="btn btn-primary">Deposit</a>
                <a href="@Url.Action("Withdraw", "Home")" class="btn btn-primary">Withdraw</a>
            </div>
        }
    </main>

    <footer class="text-center">
        <p>&copy; 2023 Your App Name. All rights reserved.</p>
    </footer>
</div>